<%= form_for [@project, @outcrop] do |f| %>
    <%= f.label :location %>
    <%= f.text_field :location %><br>

    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :latitude %>
    <%= f.number_field :latitude, step: :any %><br>

    <%= f.label :longitude %>
    <%= f.number_field :longitude, step: :any %><br>

    <%= f.submit %>
<% end %>